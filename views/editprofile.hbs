<!DOCTYPE html>
<html>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
<script>
    var addInterest = function() {
    	$.post("/addinterest",
    		{
    		interest: document.getElementById('interest').value
    		}, function(data) {
    			$("#interest").val("");
    	});
    };
</script>
<head>
</head>
<body>
<h2> Edit Profile </h2>
<div class="container">
<form action="/edit" method="post">
	<div class="form-group row">
    	Email Address: 
    	<input type="email" name="email" class="form-control" id="email" placeholder="Email" style="width: 40%">
    </div>
  	<div class="form-group row">
  		Affiliation:
  		<input type="text" name="affiliation" class="form-control" id="affiliation" placeholder="e.g., Penn" style="width: 40%">
  	</div>
  	<div class="form-group row">
  		Birthday:
  		<input type="date" name="birthday" class="form-control" id="affiliation" style="width: 40%">
  	</div>
  	<div class="form-group row">
    <button type="submit" class="btn btn-primary" value="Update"> Update </button>
    </div>
 </form>
 </div>
 
<div class="container">
 <form action="/addinterest" method="post">
	 <div class="form-group row">
		 Add Interests:
		 <input type="text" class="form-control" id="interest" name="interest" style="width: 40%">
	 </div>
	 <div class="form-group row">
	 	<button type="button" class="btn btn-primary btn-sm" onclick="addInterest()"> Add </button>
	 </div>
 </form>
</div>
</body>
</html>